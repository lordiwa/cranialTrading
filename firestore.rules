rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: usuario autenticado
    function isAuth() {
      return request.auth != null;
    }

    // Helper function: es el owner del documento
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow reading basic user doc for public profiles and authenticated users
      allow read: if isAuth() || true; // allow public read of user docs (consider restricting sensitive fields)
      allow create: if isAuth() && isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;

      // Preferencias subcollection
      match /preferencias/{preferenceId} {
        allow read, write: if isOwner(userId);
      }

      // Cards subcollection
      match /cards/{cardId} {
        // Allow read if the card is marked public, otherwise require auth (owner or authenticated user depending on privacy policy)
        allow read: if resource.data.public == true || isAuth();
        allow write: if isOwner(userId);
      }

      // Matches nuevos subcollection
      match /matches_nuevos/{matchId} {
        allow read, write: if isOwner(userId);
      }

      // Matches guardados subcollection
      match /matches_guardados/{matchId} {
        allow read, write: if isOwner(userId);
      }

      // Matches eliminados subcollection
      match /matches_eliminados/{matchId} {
        allow read, write: if isOwner(userId);
      }

      // Contactos guardados subcollection
      match /contactos_guardados/{contactId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Conversations collection - PERMISSIVE for now to test
    match /conversations/{document=**} {
      allow read, write: if isAuth();
    }
  }
}
