rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function: usuario autenticado
    function isAuth() {
      return request.auth != null;
    }

    // Helper function: es el owner del documento
    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // Helper function: username is unique (no other user has this username)
    function usernameIsUnique(username) {
      return !exists(/databases/$(database)/documents/users/$(request.auth.uid))
        || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.username == username
        || query(/databases/$(database)/documents/users)
          .where('username', '==', username)
          .stream().length() == 0;
    }

    // Users collection
    match /users/{userId} {
      // Allow reading basic user doc for public profiles
      allow read: if isAuth() || true;

      // Allow create with username validation
      allow create: if isAuth() && isOwner(userId)
        && request.resource.data.username is string
        && request.resource.data.username.size() > 0
        && usernameIsUnique(request.resource.data.username);

      // Allow update with username uniqueness check
      allow update: if isOwner(userId)
        && (!('username' in request.resource.data)
          || usernameIsUnique(request.resource.data.username));

      allow delete: if false;

      // Preferencias subcollection
      match /preferencias/{preferenceId} {
        allow read, write: if isOwner(userId);
      }

      // Cards subcollection
      match /cards/{cardId} {
        allow read: if resource.data.public == true || isAuth();
        allow write: if isOwner(userId);
      }

      // Matches nuevos subcollection
      match /matches_nuevos/{matchId} {
        allow read, write: if isOwner(userId);
      }

      // Matches guardados subcollection
      match /matches_guardados/{matchId} {
        allow read, write: if isOwner(userId);
      }

      // Matches eliminados subcollection
      match /matches_eliminados/{matchId} {
        allow read, write: if isOwner(userId);
      }

      // Contactos guardados subcollection
      match /contactos_guardados/{contactId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Conversations collection
    match /conversations/{document=**} {
      allow read, write: if isAuth();
    }
  }
}