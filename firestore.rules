rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permitir lectura pública de usuarios (perfiles públicos)
    // Lectura: cualquiera puede ver perfiles públicos
    // Escritura: solo el dueño
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;

      // ✅ Colección de mazos del usuario: users/{userId}/decks/{deckId}
      match /decks/{deckId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Colección de cartas del usuario
      // Lectura pública para permitir ver perfiles sin login
      // El cliente filtra por public === true
      match /cards/{cardId} {
        allow read: if true;
        allow write: if request.auth.uid == userId;
      }

      // Colección de preferencias del usuario
      match /preferences/{preferenceId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Colección de matches guardados
      match /savedMatches/{matchId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Colección de contactos guardados
      match /savedContacts/{contactId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Price history snapshots (collection-level daily totals)
      match /priceHistory/{snapshotId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Per-card price history
      match /cardPriceHistory/{cardId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Colección de matches nuevos (calculados)
      // Cualquier usuario autenticado puede crear un match (enviar interés)
      // Solo el dueño puede leer, actualizar y eliminar
      match /matches_nuevos/{matchId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth.uid == userId;
      }

      // Colección de matches guardados
      match /matches_guardados/{matchId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Colección de matches eliminados
      match /matches_eliminados/{matchId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Colección de contactos guardados
      match /contactos_guardados/{contactId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Binders del usuario
      match /binders/{binderId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }
    }

    // ========== COLECCIONES PÚBLICAS PARA MATCHES OPTIMIZADOS ==========
    // Cartas públicas (para trade/sale) - cualquier autenticado puede leer
    match /public_cards/{docId} {
      allow read: if request.auth != null;
      // Solo el dueño puede escribir (userId debe coincidir)
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Preferencias públicas (lo que buscan) - cualquier autenticado puede leer
    match /public_preferences/{docId} {
      allow read: if request.auth != null;
      // Solo el dueño puede escribir (userId debe coincidir)
      allow write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Conversaciones de mensajes (a nivel raíz)
    match /conversations/{conversationId} {
      // Permitir a usuarios autenticados crear y leer conversaciones donde participan
      allow create: if request.auth != null;
      allow read, update: if request.auth != null;
      // Allow delete only if user is a participant
      allow delete: if request.auth != null
        && request.auth.uid in resource.data.participantIds;

      // Mensajes dentro de la conversación
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // ========== MATCHES COMPARTIDOS (INTERÉS DESDE PERFIL) ==========
    // Colección a nivel raíz para matches donde ambos usuarios pueden ver
    match /shared_matches/{matchId} {
      // Cualquier usuario autenticado puede crear
      allow create: if request.auth != null;
      // Solo participantes pueden leer y modificar
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
      allow update, delete: if request.auth != null &&
        (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
    }

    // Legacy colecciones (mantener compatibilidad con datos anteriores)
    match /colecciones/{userId}/cards/{cardId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /preferencias/{userId}/{preferenceId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /matches_guardados/{userId}/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /contactos_guardados/{userId}/{contactId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // ========== MARKET DATA (read-only, populated by Cloud Functions) ==========
    match /market_data/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
      match /{subcol}/{subDocId} {
        allow read: if request.auth != null;
        allow write: if false;
      }
    }

    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

