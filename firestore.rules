rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ═══════════════════════════════════════════════════════════════════
    // USUARIOS - Datos base del usuario
    // ═══════════════════════════════════════════════════════════════════
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;

      // Cartas en colección del usuario
      match /cards/{cardId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Preferencias de intercambio
      match /preferencias/{preferenceId} {
        allow read: if request.auth != null;
        allow write: if request.auth.uid == userId;
      }

      // Matches nuevos (detectados automáticamente)
      match /matches_nuevos/{matchId} {
        allow read, write: if request.auth.uid == userId;
      }

      // Matches guardados (usuario interesado)
      match /matches_guardados/{matchId} {
        allow read, write: if request.auth.uid == userId;
      }

      // Matches eliminados (en período de 15 días antes de borrar)
      match /matches_eliminados/{matchId} {
        allow read, write: if request.auth.uid == userId;
      }

      // ✅ NUEVO: Contactos guardados (Caso 7)
      match /contactos_guardados/{contactId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // ═══════════════════════════════════════════════════════════════════
    // CONVERSACIONES - Chat entre dos usuarios
    // ═══════════════════════════════════════════════════════════════════
    match /conversations/{conversationId} {
      // ✅ FIX: Validación mejorada - verificar que usuario es participante
      allow read: if request.auth != null &&
                     resource.data.participantIds != null &&
                     request.auth.uid in resource.data.participantIds;

      allow write: if request.auth != null &&
                      resource.data.participantIds != null &&
                      request.auth.uid in resource.data.participantIds;

      // ✅ FIX: Crear nueva conversación - solo si eres uno de los participantes
      allow create: if request.auth != null &&
                       request.resource.data.participantIds != null &&
                       request.auth.uid in request.resource.data.participantIds &&
                       request.resource.data.participantIds.size() == 2;

      // Mensajes dentro de conversación
      match /messages/{messageId} {
        // ✅ FIX: Leer solo si eres participante de la conversación
        allow read: if request.auth != null &&
                       get(/databases/$(database)/documents/conversations/$(conversationId))
                         .data.participantIds.hasAny([request.auth.uid]);

        // ✅ FIX: Escribir solo si eres el remitente
        allow create: if request.auth != null &&
                         request.resource.data.senderId == request.auth.uid &&
                         get(/databases/$(database)/documents/conversations/$(conversationId))
                           .data.participantIds.hasAny([request.auth.uid]);

        // Solo puedes actualizar tus propios mensajes (marcar como leído)
        allow update: if request.auth != null &&
                         resource.data.senderId == request.auth.uid;

        // No permitir eliminar mensajes
        allow delete: if false;
      }
    }

    // ═══════════════════════════════════════════════════════════════════
    // FALLBACK - Denegar todo lo demás
    // ═══════════════════════════════════════════════════════════════════
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
